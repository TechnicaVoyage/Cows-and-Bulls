<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dhobs.cowsbulls"
    android:versionCode="6"
    android:versionName="2.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="MyApplication">
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!-- Google Analytics Version v4 needs this value for easy tracking -->
        <meta-data
            android:name="com.google.android.gms.analytics.globalConfigResource"
            android:resource="@xml/global_tracker" />

        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Meenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dhobs.cowsbulls.MEENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".game_mode"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dhobs.cowsbulls.GAME_MODE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Cvp"
            android:label="@string/cvp" >
            <intent-filter>
                <action android:name="com.dhobs.cowsbulls.CVP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Cvpgame2"
            android:label="@string/cvp" >
            <intent-filter>
                <action android:name="com.dhobs.cowsbulls.CVPGAME2" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Play_pvp"
            android:label="@string/pvp" >
            <intent-filter>
                <action android:name="com.dhobs.cowsbulls.PLAY_PVP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Cvpgame"
            android:label="@string/cvp" >
            <intent-filter>
                <action android:name="com.dhobs.cowsbulls.CVPGAME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Pvp"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dhobs.cowsbulls.PVP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Game"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dhobs.cowsbulls.GAME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:icon="@drawable/ic_action_settings"
            android:label="@string/settings" >
            <intent-filter>
                <action android:name="com.dhobs.cowsbulls.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Game2"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dhobs.cowsbulls.GAME2" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".History"
            android:icon="@drawable/ic_menu_recent_history"
            android:label="@string/history" >
            <intent-filter>
                <action android:name="com.dhobs.cowsbulls.HISTORY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Mark"
            android:configChanges="keyboardHidden"
            android:icon="@drawable/ic_action_edit"
            android:label="@string/mark"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.dhobs.cowsbulls.MARK" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>